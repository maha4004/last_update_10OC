<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:orientation="vertical"
    android:background="@drawable/bg2"
   >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgD"
        android:padding="20dp"
        android:src="@drawable/f"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/descD"
        android:text="هذا وصف للدورة"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="#000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="مقدمة من :"
            android:paddingTop="16dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/byD"/>

        <TextView
            android:id="@+id/byD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="ريم عبدالله"
            android:textSize="20sp"
            android:textColor="#555353"
            android:layout_marginRight="6dp"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="11dp"
        android:padding="9dp"
        app:cardBackgroundColor="#30C2BEBE">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:paddingTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                android:layout_height="40dp"
                    android:src="@drawable/ic_access_time_black_24dp" />

                <ImageView
                    android:paddingTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_date_range_black_24dp" />
                <ImageView
                    android:paddingTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/where"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:gravity="center"
                    android:text="10-11 am"
                    android:layout_weight="1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dateD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 Dec 2019"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="M 1/2/14"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/ticket"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#B5DFA8A3"
        android:text="حجز"
        android:textStyle="bold"
        android:textColor="#070707"
        android:textSize="19sp" />

</LinearLayout>